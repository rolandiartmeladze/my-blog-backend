{
  "phases": {
    "setup": {
      "nixPkgs": ["php", "phpPackages.composer", "nginx", "mysql"]
    },
    "install": {
      "cmds": [
        "composer install --ignore-platform-reqs",
        "php artisan key:generate"
      ]
    },
    "start": {
      "cmd": "php artisan serve --host=0.0.0.0 --port=8000"
    }
  }
}

